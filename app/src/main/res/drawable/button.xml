<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#2741fc"/>
            <corners android:radius="@dimen/radio_dimen"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#e1fbbe"/>
            <corners android:radius="@dimen/radio_dimen"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#b6fc6c"
                android:endColor="#498d02"
                android:angle="90"/>
            <corners android:radius="@dimen/radio_dimen"/>
        </shape>
    </item>
</selector>